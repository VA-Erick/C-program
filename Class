#include<stdio.h>
int main()
{
    char ch[]={'A','U','S','T','/0'};
    int a = strlen(ch);         //strlen is used to count string length
    char ch1[]={'A','U','S','T'};
    int b = strlen(ch1);

    printf(" %d  %d", a ,b);


    return 0 ;
}



--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

#include<stdio.h>
int main()
{
    // string copy----strcpy(target,source)



    char ch1[]="AUST";
    char ch2[]= "CSE";

    printf("%s\n",ch1);
    printf("%s\n\n",ch2);
    strcpy(ch1,ch2);
    printf("%s\n",ch1);
    printf("%s\n",ch2);

    return 0;

}

--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------



#include<stdio.h>
int main()
{
    // string merge----strcat(target,source)



    char ch1[]="AUST ";
    char ch2[]= "CSE";

    printf("%s\n",ch1);
    printf("%s\n\n",ch2);
    strcat(ch1,ch2);
    printf("%s\n",ch1);
    printf("%s\n",ch2);

    return 0;

}
--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------




#include<stdio.h>
int main()
{
    // string compair----strcmp(target,source)----  -1,0,1
    //if 2nd is big then -1
    // Lexicongraphically


    char ch1[]="AUST";
    char ch2[]= "CSE";

    int value = strcmp(ch1,ch2);
    printf("%d \n",value);




    char ch3[]="AUST";
    char ch4[]= "ACST";

    int value1 = strcmp(ch3,ch4);
    printf("%d",value1);


    return 0;

}

