#include<stdio.h>
int main()
{
// string

    char ch[8];
    gets(ch);


    printf("%s \n",ch);



    char chs[10] = { 'A', 'U', 'S', 'T', '\0'};
    printf("%s",chs);







    return 0 ;v
}

